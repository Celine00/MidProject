<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="strongestgirls.midproject.EditActivity"
    android:id="@+id/editLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/edit_background">

    <!--头像-->
    <ImageView
        android:id="@+id/profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/init_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <!--姓名-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/profile"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hero_name"
            android:textSize="18sp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:maxLines="1"/>
    </android.support.design.widget.TextInputLayout>

    <!--性别-->
    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hero_sex"
        android:textSize="18sp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginStart="15dp" />
    <RadioGroup
        android:id="@+id/sexSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_below="@+id/text1"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintLeft_toRightOf="@+id/sex">
        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="18sp"
            android:checked="true"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toRightOf="@+id/sex"/>
        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textSize="18sp"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toRightOf="@+id/male"/>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="@+id/sex"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="parent"
        android:orientation="vertical"
        android:layout_marginStart="10dp">
        <!--生卒-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hero_Year"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"/>
            <Spinner
                android:id="@+id/birth_spinner"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:dropDownWidth="100dp"/>
            <TextView
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到"
                android:textSize="18sp"/>
            <Spinner
                android:id="@+id/death_spinner"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:dropDownWidth="110dp"/>
        </LinearLayout>
        <!--古代籍贯-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hero_place"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"/>
            <Spinner
                android:id="@+id/place_spinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:dropDownWidth="70dp"/>
        </LinearLayout>
        <!--主效势力-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hero_power"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"/>
            <Spinner
                android:id="@+id/power_spinner"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:dropDownWidth="90dp"/>
        </LinearLayout>
    </LinearLayout>

    <!--相关事迹-->
    <TextView
        android:id="@+id/event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hero_event"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        android:layout_marginStart="15dp" />
    <EditText
        android:id="@+id/edit_event"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@+id/event"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="确定"
        android:textSize="18sp"
        android:background="@drawable/circular"
        android:layout_margin="15dp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/cancel"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="取消"
        android:textSize="18sp"
        android:background="@drawable/circular"
        android:layout_margin="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
