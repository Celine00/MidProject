<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="strongestgirls.midproject.DetailActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3"
        android:background="@color/colorCyan">
        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/hero_img"
            android:src="@mipmap/zhou_yu"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:focusableInTouchMode="false"
            android:focusable="false"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hero_name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="25sp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:background="@null"/>
        <EditText
            android:id="@+id/power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hero_power"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:background="@null"/>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <EditText
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hero_sex"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@null"/>
        <EditText
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hero_year"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/sex"
            app:layout_constraintBottom_toBottomOf="@id/sex"
            app:layout_constraintTop_toTopOf="@id/sex"
            android:background="@null"/>
        <EditText
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hero_name"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sex"
            android:background="@null"/>
        <EditText
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hero_place"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/name2"
            app:layout_constraintBottom_toBottomOf="@id/name2"
            app:layout_constraintTop_toTopOf="@id/name2"
            android:background="@null"/>
        <EditText
            android:id="@+id/event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sample"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/name2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@null"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>

